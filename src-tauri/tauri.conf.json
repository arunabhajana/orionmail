{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "orionmail",
  "version": "0.1.0",
  "identifier": "com.orionmail.app",
  "build": {
    "frontendDist": "http://localhost:3000",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "orionmail",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "transparent": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}